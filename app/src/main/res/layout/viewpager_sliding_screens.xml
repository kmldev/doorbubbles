<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp">

        <com.laundry.bubbles.utils.CustomTextViewpoppins_bold
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:maxLength="20"
            android:text="Artist Categories"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />


        <com.laundry.bubbles.utils.CustomTextViewMuliBold
            android:id="@+id/short_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/_20sdp"
            android:maxLength="20"
            android:text="We Care For You"
            android:textColor="@color/gray"
            android:textSize="@dimen/_10sdp" />


        <com.laundry.bubbles.utils.CustomTextViewpoppins_bold
            android:id="@+id/long_description"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/short_description"
            android:layout_marginTop="@dimen/_5sdp"
            android:maxLength="60"
            android:text="A new way to take services at home using Fannan"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/intro_1"
            android:scaleType="fitCenter"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/image"
            android:src="@drawable/ic_right_arrow" />


    </RelativeLayout>


</RelativeLayout>
