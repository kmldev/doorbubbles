<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.constraintlayout.widget.ConstraintLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_140sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="@dimen/_7sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="@dimen/_7sdp"
            android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/llName"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <com.laundry.bubbles.utils.CustomTextViewBold
            android:layout_width="match_parent"
            android:id="@+id/ctvSerName"
            android:textSize="@dimen/_18sdp"
            android:singleLine="true"
            android:text="@string/cloth_washing_fold"
            android:layout_height="wrap_content"
            />
        <com.laundry.bubbles.utils.CustomTextView
            android:layout_width="match_parent"
            android:id="@+id/ctvSerDescrition"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:maxLines="2"
            android:text="@string/thelaundry"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:background="@drawable/shape_for_gradient"
            android:layout_height="@dimen/_30sdp">

            <com.laundry.bubbles.utils.CustomTextView
                android:layout_width="match_parent"
                android:id="@+id/ctvSerTime"
                android:textSize="@dimen/_16sdp"
                android:layout_margin="@dimen/_2sdp"
                android:text="@string/hours"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_height="match_parent"
                />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3">

        <ImageView
            android:id="@+id/ivImage"
            android:src="@drawable/cloth_washing_fold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>


</layout>
