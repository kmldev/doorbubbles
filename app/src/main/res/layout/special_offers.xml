<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_height="@dimen/_120sdp"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="@dimen/_120sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/acivOfferImage"
        android:layout_margin="@dimen/_10sdp"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:scaleType="fitXY"
        android:background="@drawable/offernewpa"
        />

    <com.laundry.bubbles.utils.CustomTextViewBold
        android:id="@+id/ctvOffer"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:textColor="@color/offwhite"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_10sdp"

        android:text="Get 45% Off on wash and Iron"/>


    <com.laundry.bubbles.utils.CustomTextViewBold
        android:id="@+id/offer"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:maxLines="2"

        android:text="Get 45% Off on wash and Iron"/>



    <com.laundry.bubbles.utils.CustomTextView
        android:id="@+id/ctvCode"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_25sdp"
        android:textColor="@color/white"
        android:text="Zdg6hsc"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:background="@drawable/shape_for_rectanglebutton"
        android:layout_marginTop="@dimen/_75sdp"
        />


</RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
