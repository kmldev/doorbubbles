<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.PaymentActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



    <androidx.cardview.widget.CardView
        android:id="@+id/cardRely"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="match_parent"
        app:cardElevation="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">






            <RelativeLayout
                android:id="@+id/relayBackground"

                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/white">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_left_arrow"/>

                <com.laundry.bubbles.utils.CustomTextViewpoppins_bold
                    android:layout_centerVertical="true"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:text="@string/SchedulePikcup"/>







            </RelativeLayout>


            <LinearLayout
                android:layout_below="@+id/relayBackground"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:weightSum="5">

                <RelativeLayout
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_step1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_5sdp"

                        android:src="@drawable/ic_loc_white" />

                </RelativeLayout>


                <View
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"

                    android:background="@drawable/linestep"/>
                <RelativeLayout
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/ic_step1"
                    android:layout_gravity="center_horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_5sdp"

                        android:src="@drawable/ic_datetab"/>
                </RelativeLayout>

                <View
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_weight="1"

                    android:layout_gravity="center_vertical"

                    android:background="@drawable/linestep"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_step1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_5sdp"


                        android:src="@drawable/ic_paymenttab" />


                </RelativeLayout>
                <View
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_weight="1"

                    android:layout_gravity="center_vertical"

                    android:background="@drawable/linestep"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/ic_step2"
                    android:layout_gravity="center_horizontal">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_5sdp"

                        android:src="@drawable/ic_completetab"/>





                </RelativeLayout>
            </LinearLayout>



        </RelativeLayout>





    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvHome"
        app:layout_constraintTop_toBottomOf="@id/cardRely"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="@dimen/_100sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="@dimen/_5sdp"
            android:layout_height="match_parent"
            >


            <androidx.cardview.widget.CardView
                android:id="@+id/cvImage"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/_10sdp"
                >
                <ImageView
                    android:id="@+id/ivImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/shop_image"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="vertical">
                <com.laundry.bubbles.utils.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:id="@+id/ctvbShopName"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_7sdp"
                    android:textSize="20sp"
                    android:hint="@string/enterpickupdate"/>
                <com.laundry.bubbles.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:hint="@string/enterpickuptime"
                    android:maxLines="4"
                    android:id="@+id/ctvAddress"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <com.laundry.bubbles.utils.CustomTextViewMuliBold
        android:id="@+id/titleenw"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/black"
        android:text="@string/paymath"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvCoD"
        app:layout_constraintTop_toBottomOf="@id/titleenw"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <RadioButton
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="@dimen/_5sdp"
                android:id="@+id/rdbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constMain"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/rdbtn"


                android:layout_width="wrap_content"
                android:layout_height="wrap_content">




                <com.laundry.bubbles.utils.CustomTextViewBold
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/titlehome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="COD"
                    android:textColor="@color/black"/>

                <com.laundry.bubbles.utils.CustomTextView
                    android:id="@+id/address"
                    app:layout_constraintTop_toBottomOf="@+id/titlehome"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:text=""
                    />





            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvAmount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:layout_marginTop="@dimen/_80sdp"
        app:layout_constraintTop_toBottomOf="@+id/cvCoD">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llSave"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/procode" />

                    <com.laundry.bubbles.utils.CustomTextView
                        android:id="@+id/ctvHaveProcode"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="center_vertical"
                        android:text="@string/have_a_promo"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/llEnterCode"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/procode" />

                    <com.laundry.bubbles.utils.CustomEditText
                        android:id="@+id/cetEnterProcode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:hint="@string/enter_a_promo"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/llSubmit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="0.3"
                        android:background="@drawable/shape_for_gradient">

                        <com.laundry.bubbles.utils.CustomTextView
                            android:id="@+id/ctvApply"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/apply"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"
                android:id="@+id/view"
                app:layout_constraintTop_toBottomOf="@+id/ll_header"/>

            <com.laundry.bubbles.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/view"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/ctvSub_Total"
                android:text="@string/subtotal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:textSize="16sp"
                />

            <com.laundry.bubbles.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ctvSub_Total"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/ctvTax"
                android:text="@string/tax"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:textSize="16sp"
                />

            <com.laundry.bubbles.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ctvTax"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/ctvDiscount"
                android:text="@string/discount"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:textSize="16sp"
                />
            <com.laundry.bubbles.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/view"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/ctvSub_TotalValue"
                android:text="0"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:textSize="16sp"
                />

            <com.laundry.bubbles.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ctvSub_Total"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/ctvTaxValue"
                android:text="0"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:textSize="16sp"
                />
            <com.laundry.bubbles.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ctvTaxValue"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/ctvDiscountValue"
                android:text="0"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:textSize="16sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"
                android:id="@+id/view1"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/ctvDiscountValue"/>

            <com.laundry.bubbles.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/view1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/ctvPayAble"
                android:text="@string/payable"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:textSize="16sp"
                />
            <com.laundry.bubbles.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/view1"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/ctvPayAbleAmount"
                android:text="0"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:textSize="16sp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:id="@+id/rlConfirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvAmount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/ic_longbtn">

        <com.laundry.bubbles.utils.CustomTextViewBold
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="@string/confirm_order"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />


    </RelativeLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
