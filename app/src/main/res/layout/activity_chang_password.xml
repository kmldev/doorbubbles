<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".activity.authentication.ChangePassword">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-60dp"
                    app:cardCornerRadius="55dp"
                    >


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:padding="@dimen/_25sdp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_c_pass" />
                </com.google.android.material.card.MaterialCardView>


                <com.laundry.bubbles.utils.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-150dp"
                    android:text="@string/changpass"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />


                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_left_arrow"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-30dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.7"
                android:orientation="vertical">


                <com.laundry.bubbles.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Old_Password"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">


                    <com.laundry.bubbles.utils.CustomEditText
                        android:id="@+id/etOldPass"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="0.8"
                        android:gravity="center_vertical"
                        android:inputType="textPassword"
                        android:background="@null"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ivOldPass"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:src="@drawable/passwordhide" />


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"/>

                <com.laundry.bubbles.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/New_password"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">


                    <com.laundry.bubbles.utils.CustomEditText
                        android:id="@+id/etNewPass"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="0.8"
                        android:gravity="center_vertical"
                        android:inputType="textPassword"
                        android:background="@null"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ivNewPass"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:src="@drawable/passwordhide" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"/>
                <com.laundry.bubbles.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/Retype_password"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">


                    <com.laundry.bubbles.utils.CustomEditText
                        android:id="@+id/etConfirmPass"
                        android:layout_width="367dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.8"
                        android:gravity="center_vertical"
                        android:inputType="textPassword"
                        android:paddingLeft="5dp"
                        android:background="@null"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ivConfirmPass"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:src="@drawable/passwordhide" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"/>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    >



                <com.laundry.bubbles.utils.CustomButton
                    android:id="@+id/chang_save"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_for_rectangleblueround"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="50"
                    android:text="@string/changepassword"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/white" />
                </com.google.android.material.card.MaterialCardView>



            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</layout>
