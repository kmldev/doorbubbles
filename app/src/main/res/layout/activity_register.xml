<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5"
            tools:context=".Activity.Login">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:padding="@dimen/_20sdp"
                    android:src="@drawable/register" />

                <com.laundry.bubbles.utils.CustomTextViewpoppins_bold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/signup"
                    android:textColor="@color/more_slow_black"
                    android:textSize="@dimen/_16sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="#F5F5F5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_4sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_1sdp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.laundry.bubbles.utils.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:hint="@string/fname"
                                />

                        <com.laundry.bubbles.utils.CustomEditText
                            android:id="@+id/cetName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@null"
                            android:maxLength="20"
                            android:drawablePadding="@dimen/_15sdp"
                            android:hint="@string/fname"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                            android:singleLine="true" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginTop="@dimen/_13sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_1sdp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.laundry.bubbles.utils.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:hint="@string/pnumber"
                                />

                            <com.laundry.bubbles.utils.CustomEditText
                                android:id="@+id/cetNumber"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@null"
                                android:inputType="number"
                                android:drawablePadding="@dimen/_15sdp"
                                android:hint="@string/pnumber"
                                android:singleLine="true"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginTop="@dimen/_13sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_1sdp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <com.laundry.bubbles.utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:hint="@string/email"
                            />


                        <com.laundry.bubbles.utils.CustomEditText
                            android:id="@+id/cetEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@null"
                            android:inputType="textEmailAddress"
                            android:drawablePadding="@dimen/_15sdp"
                            android:hint="@string/email"
                            android:singleLine="true"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_13sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_1sdp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <com.laundry.bubbles.utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:hint="@string/password"
                            />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="@dimen/_5sdp"

                                android:orientation="horizontal">


                                <com.laundry.bubbles.utils.CustomEditText
                                    android:id="@+id/cetPassword1"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="0.8"
                                    android:gravity="center_vertical"
                                    android:inputType="textPassword"
                                    android:background="@null"
                                    android:paddingLeft="5dp"
                                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ!@#$%^*()_+=-{}|';:?/1234567890"
                                    android:maxLength="15"
                                    android:hint="@string/password"
                                    android:singleLine="true"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:id="@+id/ivOldPass"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="5dp"
                                    android:gravity="center_vertical"
                                    android:src="@drawable/passwordhide" />


                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_1sdp">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <com.laundry.bubbles.utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:hint="@string/cpassword"
                            />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="@dimen/_5sdp"
                                android:orientation="horizontal">


                                <com.laundry.bubbles.utils.CustomEditText
                                    android:id="@+id/cetPassword2"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="0.8"
                                    android:gravity="center_vertical"
                                    android:inputType="textPassword"
                                    android:background="@null"
                                    android:paddingLeft="5dp"
                                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ!@#$%^*()_+=-{}|';:?/1234567890"
                                    android:maxLength="15"
                                    android:hint="@string/password"
                                    android:singleLine="true"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:id="@+id/ivNewPass"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="5dp"
                                    android:gravity="center_vertical"
                                    android:src="@drawable/passwordhide" />


                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cvRegister"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="30dp"
                    android:background="@drawable/button_selector2"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:elevation="@dimen/_5sdp"
                    >
                    <com.laundry.bubbles.utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/signupC"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:padding="5dp"
                        android:textSize="@dimen/_16sdp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/right"
                        android:padding="5dp"
                        android:layout_margin="@dimen/_10sdp"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.laundry.bubbles.utils.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/already" />

                    <com.laundry.bubbles.utils.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:id="@+id/login_now"
                        android:text="@string/loginc"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/RRsncbar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </ScrollView>
</layout>
