<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:orientation="vertical">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:id="@+id/llName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.laundry.bubbles.utils.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:id="@+id/ctvQuantity"
                        android:singleLine="true"
                        android:layout_weight="0.1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        />

                    <com.laundry.bubbles.utils.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_16sdp"
                        android:text="@string/shirt"
                        android:singleLine="true"
                        android:id="@+id/ctvName"
                        android:textColor="@color/black"
                        android:layout_weight="0.4"
                        />

                    <com.laundry.bubbles.utils.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/onlywash"
                        android:textSize="@dimen/_14sdp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:visibility="invisible"
                        android:layout_weight="0.3"
                        />

                    <com.laundry.bubbles.utils.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="$0"
                        android:id="@+id/ctvPrice"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        android:layout_weight="0.2"
                        />

                </LinearLayout>
                
                <com.laundry.bubbles.utils.CustomTextView
                    android:id="@+id/ctvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/llName"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:text="@string/onlywash"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
