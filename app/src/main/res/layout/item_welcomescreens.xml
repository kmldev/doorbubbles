<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/topImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/welcome1"
      />

    <com.laundry.bubbles.utils.CustomTextViewpoppins_bold
        android:id="@+id/mainTitle"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/topImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your Clothes"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"/>
    <com.laundry.bubbles.utils.CustomTextView
        android:id="@+id/desc"
        app:layout_constraintTop_toBottomOf="@+id/mainTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="@dimen/_5sdp"
        android:text="@string/dummuydata"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"/>



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottomImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/welcome4"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
